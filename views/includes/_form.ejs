<!-- form handling -->

<form action="/api/users" id="add_user" method="POST">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" id="name" value="" placeholder="Nguyen Duc Hien">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="text" id="email" name="email" value="" placeholder="mynameishieenf@gmail.com">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender: </label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="male">
                <label for="radio-2" class="radio-label text-light">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="female">
                <label for="radio-3" class="radio-label text-light">Female</label>
            </div>
        </div>
        <div class="form-group">
            <label for="status" class="text-light">Status: </label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active">
                <label for="radio-4" class="radio-label text-light">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive">
                <label for="radio-5" class="radio-label text-light">Inactive</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>

</form>

<!-- form handling -->